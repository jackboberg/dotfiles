" use zsh
  set shell=/bin/zsh

" be iMproved
  set nocompatible

" turn on filetype while setting up (required!)
  filetype off

" follow the leader
  let mapleader=","

" make vundle go
  set rtp+=~/.vim/bundle/vundle/
  call vundle#rc()

" let Vundle manage Vundle (required!)
  Bundle 'gmarik/vundle'

" include organized config
  runtime! config/*.vim

" turn filetype back on
  filetype plugin indent on
